--[[
    Либа - по сути некая "насдтройка" над стандартным 
    http. Добавляет функцию чёрного списка сайтов.
]]

-----------------------------------------------------------------------------------------------------------------------------------
-- Массив с чёрным списком сайтов. Пока что пусто.

local blacklist = {}

-----------------------------------------------------------------------------------------------------------------------------------
-- Спизженная из SpeedText функция, проверяет наличие элемента в массиве.

local function checkForBlacklist(url)
	for _, urlik in pairs(blacklist) do
		if url == urlik then
			return true
		end
	end

	return false
end

-----------------------------------------------------------------------------------------------------------------------------------
-- Замена стандартным функциям http.

function get(url)
	if not checkForBlacklist(url) then
		return http.get(url)
	end
end

-----------------------------------------------------------------------------------------------------------------------------------

function post(url)
	if not checkForBlacklist(url) then
		return http.post(url)
	end
end

-----------------------------------------------------------------------------------------------------------------------------------
