--[[
    Своя либа для цветов, всякие функции и т. д. бля
]]

-----------------------------------------------------------------------------------------------------------------------------------

white = 1 -- белый
orange = 2 -- оранжевый
magenta = 4 -- пурпурный
lightBlue = 8 -- светлосиний
yellow = 16 -- жёлтый
lime = 32 -- лаймовый
pink = 64 -- розовый

gray = 128
grey = gray

lightGray = 256
lightGrey = lightGray

cyan = 512
purple = 1024
blue = 2048
brown = 4096
green = 8192
red = 16384
black = 32768

-----------------------------------------------------------------------------------------------------------------------------------
-- Сложение двух и более цветов. можно использовать просто colors.red + colors.black, получится то же самое

function combine( ... )
  local r = 0
  for n,c in ipairs( { ... } ) do
    r = bit.bor(r,c)
  end
  return r
end

-----------------------------------------------------------------------------------------------------------------------------------
-- Вычитание одного цвета из другого (можно использовать просто colors.red - colors.black, получится то же самое)

function subtract( colors, ... )
	local r = colors
	for n,c in ipairs( { ... } ) do
		r = bit.band(r, bit.bnot(c))
	end
	return r
end

-----------------------------------------------------------------------------------------------------------------------------------
-- Функция для проверки работоспособности либы, не используйте

function test( colors, color )
  return ((bit.band(colors, color)) == color)
end

-----------------------------------------------------------------------------------------------------------------------------------
